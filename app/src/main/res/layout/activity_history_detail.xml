<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/icons"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/title_bar" />
    </LinearLayout>

    <com.amap.api.maps.MapView
        android:id="@+id/detail_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title_bar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/running_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/layout_title_bar"
        android:background="@drawable/bg_primary_light">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:columnCount="2"
            android:background="@drawable/bg_primary_light">

            <TextView
                android:id="@+id/route_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="路 径 形 状:  "
                android:textColor="@color/icons"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/route_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="∞"
                android:textColor="@color/color_red_dark"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="跑 步 距 离:  "
                android:textColor="@color/icons"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/length_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="0 m"
                android:textColor="@color/icons"
                android:textSize="15sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="跑 步 时 长:  "
                android:textColor="@color/icons"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="0 时 0分 0秒"
                android:textColor="@color/icons"
                android:textSize="15sp" />
        </GridLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>