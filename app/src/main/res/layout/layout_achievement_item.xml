<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/achievement_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/achievement_show_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/bg_grid_divider">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/achievement_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:roundAsCircle="true"
                app:roundingBorderWidth="4dp"
                app:roundingBorderColor="@color/divider_light"
                app:actualImageScaleType="focusCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/achievement_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="夏威夷蜗牛"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/condition_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_below="@id/achievement_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/condition_image"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_below="@id/achievement_title"
                        android:background="@mipmap/get_achievement" />

                    <TextView
                        android:id="@+id/condition_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/condition_image"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="获取条件"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time_achieved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="2019.1.12获得"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>