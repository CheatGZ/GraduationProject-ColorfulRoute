<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/vicinity_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_dark">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_icon"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        app:roundAsCircle="true"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@mipmap/place_holder_user"
        fresco:progressBarAutoRotateInterval="500"
        fresco:progressBarImage="@mipmap/loading_pic" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_icon"
        android:layout_toEndOf="@id/user_icon"
        android:ellipsize="end"
        android:maxEms="8"
        android:maxLines="1"
        android:text="用户001"
        android:textColor="@color/icons"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:layout_toEndOf="@id/user_icon"
        android:text="[无徽章]"
        android:textColor="@color/icons"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/user_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_title"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/user_icon"
        android:ellipsize="end"
        android:maxLength="20"
        android:text="[未设置简介]"
        android:textColor="@color/icons"
        android:textSize="12sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/primary"
        android:layout_toEndOf="@id/user_icon"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/user_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_icon"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/user_time"
        android:text="0.01km"
        android:textColor="@color/icons"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_icon"
        android:layout_alignParentEnd="true"
        android:text="1小时前"
        android:textColor="@color/icons"
        android:textSize="12sp"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>