<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    android:orientation="vertical"
    tools:context="com.bupt.colorfulroute.runningapp.activity.RouteSelectActivity">


    <com.amap.api.maps.TextureMapView
        android:id="@+id/main_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="10dp"
        android:layout_marginTop="50px">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:scrollbars="none"
            android:background="@drawable/bg_white">

            <LinearLayout
                android:id="@+id/route_schema_diagram_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/icons"
                android:orientation="horizontal" />
        </HorizontalScrollView>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tip_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/slide_tip_left"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:textColor="@color/icons"
            android:textSize="12sp"
            android:visibility="invisible"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@mipmap/transparent" />

        <Button
            android:id="@+id/start_navi_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:background="@drawable/selector_primary_btn"
            android:text="跑  步"
            android:textColor="@color/icons"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@mipmap/transparent" />

        <TextView
            android:id="@+id/tip_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="@drawable/slide_tip_right"
            android:gravity="center"
            android:textColor="@color/icons"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>
