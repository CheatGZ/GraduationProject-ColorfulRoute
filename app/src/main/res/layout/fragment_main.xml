<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_title_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/primary_light"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/route_kind_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/selector_btn_stroke"
            android:elevation="8dp"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="卉跑"
            android:textColor="@drawable/selector_text"
            android:textSize="35sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@color/grid_divider" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:textColor="@color/divider_light"
            android:text="圆形"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_primary_dark"/>
    </LinearLayout>

    <View
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/primary_dark"
        app:layout_constraintTop_toBottomOf="@id/title_bar" />

    <com.bupt.colorfulroute.runningapp.uicomponent.ScrollTextView
        android:id="@+id/scroll_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingTop="8dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/view_one" />

    <LinearLayout
        android:id="@+id/layout_progress_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_primary_dark"
        android:paddingTop="2.5dp"
        android:paddingBottom="2.5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_text_view">

        <com.bupt.colorfulroute.runningapp.uicomponent.DashBoardProgressView
            android:id="@+id/wpb_progress_view"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginBottom="12.5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:animateLayoutChanges="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_progress_view">

        <LinearLayout
            android:id="@+id/scale_show_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/selector_btn_circle_gradient"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/scale" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/change_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/selector_btn_circle_gradient"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/change_map" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/selector_btn_circle_gradient"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/location_white" />
        </LinearLayout>
    </LinearLayout>
    <!--<View-->
    <!--android:id="@+id/view_layout_btn"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.5dp"-->
    <!--android:background="@color/primary_dark"-->
    <!--android:layout_marginTop="10dp"-->
    <!--app:layout_constraintTop_toBottomOf="@id/layout_btn"/>-->

    <RelativeLayout
        android:id="@+id/layout_scale_view"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_white"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="@id/layout_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:maxEms="1"
            android:text="选择跑步长度"
            android:textColor="@color/primary_light"
            android:textSize="12sp" />

        <com.bupt.colorfulroute.runningapp.uicomponent.scaleview.VerticalScaleView
            android:id="@+id/length_scale_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/icons"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_btn" />

    <com.bupt.colorfulroute.util.MyMap
        android:id="@+id/main_map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foreground="@drawable/grdient_primary_light"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_btn" />

    <LinearLayout
        android:id="@+id/layout_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_btn">

        <TextView
            android:id="@+id/tip_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-1dp"
            android:layout_weight="1.2"
            android:alpha="0.5"
            android:background="@drawable/selector_left_tip"
            android:drawableLeft="@mipmap/slide_left"
            android:elevation="5dp"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:text="足  迹"
            android:textColor="@color/icons"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@mipmap/transparent" />

        <TextView
            android:id="@+id/btn_run_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:background="@drawable/selector_primary_btn"
            android:elevation="5dp"
            android:gravity="center"
            android:paddingTop="11dp"
            android:paddingBottom="14dp"
            android:text="规划跑"
            android:textColor="@color/icons"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@mipmap/transparent" />

        <TextView
            android:id="@+id/tip_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="-1dp"
            android:layout_weight="1.2"
            android:alpha="0.5"
            android:background="@drawable/selector_right_tip"
            android:drawableRight="@mipmap/slide_right"
            android:elevation="5dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:text="个 人中 心"
            android:textColor="@color/icons"
            android:textSize="10sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
